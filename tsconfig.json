{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "es2015",
        "sourceMap": true,
        "target": "es6",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "allowUmdGlobalAccess": true,
        "experimentalDecorators": true,
        "outDir": "./src",
        "allowJs": false,
        "declaration": true
    },
    "include": ["./ts/**/*"],
    "exclude": ["node_modules"]
}
